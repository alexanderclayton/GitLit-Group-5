<button id="signup-btn">Sign Up</button>
<button id="login-btn">Login</button>

{{#each topics as |topic|}}
    <div class="topic-card card w-100 bg-light bg-opacity-75">
        <h5 class="card-header">{{ topic.author }}</h5>
        <div class="card-body">
          <h5 class="card-title">{{ topic.title }}</h5>
          <p class="card-text">{{ topic.content }}</p>
          <p class="text-muted" style="font-size: small;">{{ topic.timestamp }}</p>
        </div>
    </div>
{{/each}}

<button id="newTopic-btn">Add a new Topic</button>